
<h1> Bookmark Manager </h1>

<h3> Your Bookmarks: </h3>

<ul>
  <% unless @bookmarks == nil %>
    <% @bookmarks.each do |bookmark| %>
      <li class="bookmark" id="bookmark-<%= bookmark.id %>">
        <a href="<%= bookmark.url %>">
          <%= bookmark.title %>
        </a>
          <form action='/delete' method='post'>
            <button type='submit' name="Delete" value='<%= bookmark.id %>'>Delete</button>
          </form>
          <form action='/<%= bookmark.id %>/edit' method='get'>
            <input type='submit' value='Edit'>
          </form>
      </li>
    <% end %>
  <% end %>
</ul>

<br>
<br>

<h3> Add a new Bookmark:</h3>
<form action ='/add' method ="post">
  <label for='url'>Add Bookmark URL</label>
    <input type="text" name="url" placeholder='url'/>
    <br>
  <label for="title">Add Bookmark Title</label>
    <input type="text" name="title" placeholder='title' />
    <br>
    <br>
  <input type="submit" name="Submit">
  <%= flash[:notice] %>
</form>
